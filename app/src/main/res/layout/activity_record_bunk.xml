<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecordBunk">

    <include android:id="@+id/toolb" layout="@layout/toolbar"/>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_centerInParent="true">

    <TextView
        android:id="@+id/sub1"
        android:text="NoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_below="@id/toolb"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/sub2"
        android:text="NoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_below="@id/sub1"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/sub3"
        android:text="NoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_below="@id/sub2"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/sub4"
        android:text="NoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_below="@id/sub3"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/sub5"
        android:text="NoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_below="@id/sub4"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/sub6"
        android:text="NoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sub5"
        android:textSize="20sp"/>
</LinearLayout>
</RelativeLayout>