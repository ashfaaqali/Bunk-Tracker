<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddSubject">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:background="#313FB8">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="25dp"
            android:background="@drawable/add_sub">

            <TextView
                android:id="@+id/add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginTop="80dp"
                android:text="Subject Name" />

            <EditText
                android:id="@+id/addSubField"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/add"
                android:layout_marginStart="35sp"/>

            <TextView

                android:id="@+id/totalClasses"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_below="@id/addSubField"
                android:text="Required Attendance (%)"
                android:layout_marginTop="20dp"/>

            <EditText
                android:id="@+id/reqAttendance"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/totalClasses"
                android:layout_marginStart="35sp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/reqAttendance"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:backgroundTint="#313FB8"
                android:text="Add Subject"
                android:textStyle="bold"
                app:cornerRadius="20dp" />

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>